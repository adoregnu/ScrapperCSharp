<UserControl x:Class="Scrapper.View.MediaElementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scrapper.ViewModel"
             xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseEnter="MediaPlayerOnMouseEnter"
          MouseLeave="MediaPlayerOnMouseLeave">
        <ffme:MediaElement Name="Media" Background="Black"
                               LoadedBehavior="Pause"
                               IsDesignPreviewEnabled="True" 
                               IsMuted="True"/>
        <Image Name="BgImage"/>
        <!--
            <ContentControl Name="MediaContent" Content="{Binding Media}"/>
            <MediaElement Name="Media" Source="{Binding MediaPath}"
                          LoadedBehavior="Manual"
                          MouseEnter="MediaPlayerOnMouseEnter"
                          MouseLeave="MediaPlayerOnMouseLeave"
                          Loaded="MediaPlayerOnLoaded"/>
            -->
    </Grid>
</UserControl>
